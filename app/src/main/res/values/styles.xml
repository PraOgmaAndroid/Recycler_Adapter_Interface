<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.TextView.Two" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/Widget.SmallComponent</item>
        <item name="strokeWidth">.5dp</item>
        <item name="strokeColor">@color/purple_200</item>
    </style>

    <style name="Widget.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>